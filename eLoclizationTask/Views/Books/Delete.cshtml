@model Book

@{
    ViewData["Title"] = "Delete Book";
}

<style>
    /* Background image for the delete book page */
    body {
        background-image: url('/Images/pexels-cottonbro-5095897.jpg'); /* Update with your local image path */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;

    }

    /* Styling for the delete book container */
    .delete-book-container {
        background: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-top: 20px;
        max-width: 800px; /* Limit container width */
        margin-left: auto;
        margin-right: auto;
    }

    /* Styling for headings and text */
    h2, h3 {
        color: #333; /* Dark color for better readability */
        text-align: center;
    }

    h4 {
        color: #555;
        margin-bottom: 15px;
    }

    dl.row dt {
        font-weight: bold;
        color: #333;
    }

    dl.row dd {
        color: #555;
    }

    /* Styling for buttons */
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 4px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 4px;
    }

    /* Add some spacing around the buttons */
    .btn {
        margin-right: 10px;
    }

    /* Ensure form elements are well-spaced */
    form {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }
</style>

<div class="delete-book-page">
    <div class="delete-book-container">
        <h2>@ViewData["Title"]</h2>

        <h3>Are you sure you want to delete this?</h3>

        <div>
            <h4>Book Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Title</dt>
                <dd class="col-sm-10">@Model.Title</dd>

                <dt class="col-sm-2">Author</dt>
                <dd class="col-sm-10">@Model.Author</dd>

                <dt class="col-sm-2">Count</dt>
                <dd class="col-sm-10">@Model.Count</dd>
            </dl>

            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
