@model User

@{
    ViewData["Title"] = "Edit User";
}

<style>
    body {
        background-image: url('/Images/pexels-cottonbro-5095897.jpg'); /* Update with your local image path */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        padding: 20px;
    }

    .card {
        border-radius: 10px;
        background-color:black; /* Card background color */
        padding: 20px;
        width: 400px; /* Fixed width for the card */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5); /* Black shadow */
        text-align: center;
    }

        .card h2 {
            color:green; /* Dark color for the title */
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: green;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: green;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 1rem;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: green;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 1rem;
    }

    .btn:hover {
        opacity: 0.8;
    }
</style>

<div class="container">
    <div class="card">
        <h2>Edit User</h2>

        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
