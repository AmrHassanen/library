@model User

@{
    ViewData["Title"] = "User Details";
}

<style>
    body {
        background-image: url('/Images/pexels-cottonbro-5095897.jpg'); /* Update with your local image path */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        padding: 20px;
    }

    .card {
        border-radius: 10px;
        background-color: black; /* Card background color */
        padding: 20px;
        width: 400px; /* Fixed width for the card */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5); /* Black shadow */
        text-align: center;
    }

        .card h2 {
            color: green; /* Dark color for the title */
            margin-bottom: 20px;
        }

        .card h4 {
            color:green; /* Dark color for the subtitle */
            margin-bottom: 20px;
        }

        .card dt {
            font-weight: bold;
        }

        .card dd {
            color:green;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #212529;
        margin-right: 10px;
    }

    .btn-secondary {
        background-color:green;
        border-color: green;
    }

    .btn {
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 1rem;
        text-decoration: none;
        color: white;
    }

        .btn:hover {
            opacity: 0.8;
        }
</style>

<div class="container">
    <div class="card">
        <h2>User Details</h2>

        <div>
            <h4>User</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 text-success">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>
            </dl>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
