@model User

@{
    ViewData["Title"] = "Delete User";
}

<style>
    body {
        background-image: url('/Images/pexels-cottonbro-5095897.jpg'); /* Update with your local image path */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        padding: 20px;
    }

    .card {
        border-radius: 10px;
        background-color: black; /* Card background color */
        padding: 20px;
        width: 400px; /* Fixed width for the card */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5); /* Black shadow */
        text-align: center;
    }

        .card h2 {
            color: green; /* Dark color for the title */
            margin-bottom: 20px;
        }

        .card h3 {
            color: #dc3545; /* Red color for warning text */
            margin-bottom: 20px;
        }

        .card dl {
            text-align: left;
            margin-bottom: 20px;
        }

        .card dt {
            font-weight: bold;
            color: green;
        }

        .card dd {
            color: green;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 1rem;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 1rem;
    }

    .btn {
        margin: 5px;
    }

        .btn:hover {
            opacity: 0.8;
        }
</style>

<div class="container">
    <div class="card">
        <h2>Delete User</h2>
        <h3>Are you sure you want to delete this user?</h3>

        <div>
            <h4 class="text-success">User</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2" style="padding-left:2px">
                    Name
                </dt>
                <dd class="col-sm-10">
                    @Model.Name
                </dd>
            </dl>

            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
